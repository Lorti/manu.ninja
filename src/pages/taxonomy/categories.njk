---
pagination:
  data: allCategories
  size: 1
  alias: category
layout: layouts/default.njk
permalink: /categories/{{ category }}/
---
<div class="Column">
  <div class="Taxonomy">
    <h1 class="Taxonomy__heading u-textCenter">
      <strong>{{ category | taxonomy }}</strong> ({{ collections[category].length }} Articles)
    </h1>
  </div>
</div>
<div class="Column">
  {% for post in collections[category] %}
    {% include 'partials/list.njk' %}
  {% endfor %}
</div>
